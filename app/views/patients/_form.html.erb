  </div>

  <div>
    <%= form.label :illness, style: "display: block" %>
    <%= form.text_field :illness %>
  </div>

  <div>
    <%= form.label :contact, style: "display: block" %>
    <%= form.text_field :contact %>
  </div>

  <div>
    <%= form.label :doctor_id, style: "display: block" %>
