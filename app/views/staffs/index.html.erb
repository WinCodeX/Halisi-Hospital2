<p style="color: green"><%= notice %></p>
<h1>Staff</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Work</th>
      <th colspan="3"></th>
    </tr>
  <thead>
  <tbody>
    <% @staffs.each do |staff| %>
    <tr>
      <td><%= staff.name %></td>
      <td><%= staff.work.name %></td>
      <td><%= link_to "Show", staff %></td>
      <td><%= link_to "Edit", edit_staff_path(staff) %></td>
      <td><%= link_to "Delete", staff, method: :delete, data: {confirm: "Are You Sure?"} %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= link_to "New staff", new_staff_path %>
